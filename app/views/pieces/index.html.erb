<h1>Listing pieces</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Width</th>
    <th>Height</th>
    <th>Date</th>
    <th>Category</th>
    <th>Path</th>
    <th>Thumb path</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pieces.each do |piece| %>
  <tr>
    <td><%= piece.name %></td>
    <td><%= piece.width %></td>
    <td><%= piece.height %></td>
    <td><%= piece.date %></td>
    <td><%= piece.category %></td>
    <td><%= piece.path %></td>
    <td><%= piece.thumb_path %></td>
    <td><%= piece.description %></td>
    <td><%= link_to 'Show', piece %></td>
    <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
    <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

